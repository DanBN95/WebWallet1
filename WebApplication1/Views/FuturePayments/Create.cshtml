@model WebApplication1.Models.FuturePayment

@{
    ViewData["Title"] = "Create_start";
}
<div class="payForm">
    <h1>Create Saving</h1>

    <h4>FuturePayment</h4>
    <hr />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <body>
        <label>Select How do you want to create your saving</label>
        <select id="select1" onchange="setForm(this.value)">
            <option value="form1">Create Saving By Goal</option>
            <option value="form2">Got Your Goal By Saving</option>
        </select>
        <hr>
        <div id="form1" style="display: block">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Add Description</label>
                            <input asp-for="Description" class="form-control"></input>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SinglePaymentvalue" class="control-label">how many you want to save</label>
                            <input asp-for="SinglePaymentvalue" class="form-control" />
                            <span asp-validation-for="SinglePaymentvalue" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Frequency" class="control-label"></label>
                            <select asp-for="Frequency" class="form-control" asp-items="Html.GetEnumSelectList<Frequency>()"></select>
                            <span asp-validation-for="Frequency" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" type="date" class="control-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="form2" style="display: none">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create2">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-cont
    rol" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Goalvalue" class="control-label"></label>
                            <input asp-for="Goalvalue" class="form-control" />
                            <span asp-validation-for="Goalvalue" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </body>

    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Index">Back to Profile</a>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
